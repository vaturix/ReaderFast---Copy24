@using Microsoft.EntityFrameworkCore;
<!DOCTYPE html>
<html>
<head>
    <title>Egzersizler</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/ExerciseStyle.css" asp-append-version="true" />
</head>
<body class="container mt-2">

    <div class="row justify-content-center mb-3">
        @if (ViewBag.PrevId != null)
        {
            <div class="col-3 text-center">
                <a href="@Url.Action("ShowExercise", "Exercise", new { id = ViewBag.PrevId })" class="btn btn-primary">Previous</a>
            </div>
        }
        <div class="col-3 text-center">
            <a href="@Url.Action("Practice", "Exercise")" class="btn btn-secondary">Home</a>
        </div>
        @if (ViewBag.NextId == null)
        {
            <a href="@Url.Action("Practice", "Exercise")" class="btn btn-primary">Complete</a>
        }
        else
        {
            <a href="@Url.Action("ShowExercise", "Exercise", new { id = ViewBag.NextId })" class="btn btn-primary">Next</a>
        }
    </div>



    </div>

    <!-- İçerik için Row -->
    <div class="row justify-content-center">
        <div class="col-9 border p-3">
            @RenderBody()
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
