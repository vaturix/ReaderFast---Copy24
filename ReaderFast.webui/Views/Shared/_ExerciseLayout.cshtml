@using Microsoft.EntityFrameworkCore;
<!DOCTYPE html>
<html>
<head>
    <title>Exercises</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/ExerciseStyle.css" asp-append-version="true" />
</head>
<body class="container mt-2">

 <div class="d-flex flex-row justify-content-between align-items-center mb-4 col-10 mx-auto">
    @if (ViewBag.PrevId == null)
    {
        <div style="visibility: hidden;" class="flex-fill text-start">
            <button class="btn btn-primary" style="border-radius: 20px;"><i class="bi bi-chevron-left"></i> Previous</button>
        </div>
    }
    else
    {
        <div class="flex-fill text-start">
            <button onclick="location.href='@Url.Action("ShowExercise", "Exercise", new { id = ViewBag.PrevId, source = (string)ViewBag.Source })'" class="btn btn-primary" style="border-radius: 20px;"><i class="bi bi-chevron-left"></i> Previous</button>
        </div>
    }
    <div class="flex-fill text-center">
        <button onclick="location.href='@Url.Action((string)ViewBag.Source, "Exercise")'" class="btn btn-secondary px-3" style="border-radius: 20px;"><i class="bi bi-house"></i></button>
    </div>
    @if (ViewBag.NextId == null)
    {
        <div class="flex-fill text-end">
            <button onclick="location.href='@Url.Action((string)ViewBag.Source, "Exercise")'" class="btn btn-success" style="border-radius: 20px;">Complete</button>
        </div>
    }
    else
    {
        <div class="flex-fill text-end">
            <button onclick="location.href='@Url.Action("ShowExercise", "Exercise", new { id = ViewBag.NextId, source = (string)ViewBag.Source })'" class="btn btn-primary" style="border-radius: 20px;">Next <i class="bi bi-chevron-right"></i></button>
        </div>
    }
</div>



    <!-- İçerik için Row -->
    <div class="row justify-content-center">
        <div class="col-9 border p-3">
            @RenderBody()
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
