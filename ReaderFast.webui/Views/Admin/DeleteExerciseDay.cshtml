@model ReaderFast.webui.ViewModels.ExerciseDayViewModel

@{
    ViewData["Title"] = "Delete Exercise Day";
}

<h2>Are you sure you want to delete this exercise day?</h2>

<form asp-action="DeleteExerciseDayConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
