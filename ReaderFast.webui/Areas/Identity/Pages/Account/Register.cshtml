@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Identity/Pages/Account/_AuthLayout.cshtml";
}

<div class="text-center">
    <form class="form-sign" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2>Create a new account</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-floating mx-3 mb-2">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
            <label asp-for="Input.Email">Email</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating mx-3 mb-2">
            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.Password">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-floating mx-3 mb-2">
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2 col-11 mx-auto">
            <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary btn-block my-4">Register</button>
        </div>



    </form>
    <hr />
    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <div class="my-3">
            <p>
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <div class="d-grid gap-2 col-11 mx-auto">
                        <button type="submit" class="btn btn-lg btn-google btn-block btn-outline" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><img src="https://img.icons8.com/color/16/000000/google-logo.png"> Signup with Google</button>
                    </div>
                }
            </p>
        </div>
    </form>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

